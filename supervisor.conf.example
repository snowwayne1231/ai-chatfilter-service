[fcgi-program:asgi]
# TCP socket used by Nginx backend upstream
socket=tcp://127.0.0.1:8021

# Diretory where your site's project files are located
directory=/ai/ai-chatfilter-service

# Each process need to have separate socket file, so we use process_num
# Make soure to update "mysite.asgi" to match your project name
command=/ai/venv/bin/daphne -u /run/daphne/daphne%(process_num)d.sock --fd 0 --access-log - --proxy-headers service.asgi:application

# Number of processes to startup roughly the number of CPUs you have
numprocs=1

# Give each process a unique name so they can be told apart
process_name=asgi%(process_num)d

# Automatically start and recover processes
autostart=true
autorestart=true

# Choose where you want your Log to go
stdout_logfile=/ai/logs/asgi.log
redirect_stderr=true


[program:wsgi]

directory=/ai/ai-chatfilter-service

command=uwsgi --socket :8000 --wsgi-file service/wsgi.py

autostart=true
autorestart=true

stdout_logfile=/ai/logs/wsgi.log


[program:socket]

directory=/ai/ai-chatfilter-service

command=/ai/venv/bin/python socket/main.py -p 8025

autostart=true
autorestart=true

stdout_logfile=/ai/logs/socket.log
